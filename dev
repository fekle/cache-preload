#!/bin/bash
set -euf

self="${0}"
workdir="$(dirname "$(realpath "${self}")")"
cd "${workdir}"

DOCKER_IMAGE="${DOCKER_IMAGE:-cache-preload:latest}"

case "${1:-}" in
  "fmt")
    find . -not -path '*/\.*' -type f -name '*.py' -exec \
      yapf -i --style .style.yapf -p -vv {} '+' || true
    ;;
  "run")
    exec python3 -O ./cache-preload.py ${@:2}
    ;;
  "docker-build")
    exec docker build --no-cache -t "${DOCKER_IMAGE}" .
    ;;
  "docker-push")
    exec docker push "${DOCKER_IMAGE}"
    ;;
  "docker-run")
    exec docker run --rm -t --shm-size=2g \
      --user "$(id -u):$(id -g)" \
      -v "${workdir}:/workdir:rw" \
      --workdir /workdir \
      "${DOCKER_IMAGE}" ${@:2}
    ;;
  *)
    echo "usage: ${self} <fmt|docker-build|docker-run>"
    ;;
esac
